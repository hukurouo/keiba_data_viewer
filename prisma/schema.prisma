// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") 
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id        Int     @default(autoincrement()) @id
  title     String
  content   String?
  published Boolean @default(false)
  author    User?   @relation(fields: [authorId], references: [id])
  authorId  Int?
}

model User {
  id            Int       @default(autoincrement()) @id
  name          String?
  jobTitle      String?
  email         String?   @unique
  createdAt     DateTime  @default(now()) @map(name: "created_at")
  updatedAt     DateTime  @updatedAt @map(name: "updated_at")
  posts         Post[]
  @@map(name: "users")
}

model Result {
  id              Int       @default(autoincrement()) @id
  raceName        String
  year            Int
  rank            Int
  frameNumber     Int
  horseNumber     Int
  horseName       String
  sexualAge       String
  weight          Int
  jockeyName      String
  time            String
  passingOrder    String
  time3f          Float
  oddsNum         Float
  oddsRank        Int
  horseWeight     Int
  horseWeightDiff Int
  trainerName     String

  @@unique([raceName, horseNumber])
}

model HorseRecord {
  id               Int       @default(autoincrement()) @id
  horseName        String
  date             String
  raceCourse       String
  weather          String
  raceNumber       Int
  raceName         String
  horseTotalNumber Int
  frameNumber      Int
  horseNumber      Int
  oddsNum          Float
  oddsRank         Int
  rank             Int
  jockeyName       String
  weight           Int
  courseType       String
  courseLength     Int
  courseStatus     String
  time             String
  timeDiff         Float
  passingOrder     String
  pace             String
  time3f           Float
  horseWeight      Int
  horseWeightDiff  Int

  @@unique([raceCourse, horseNumber, date])
}